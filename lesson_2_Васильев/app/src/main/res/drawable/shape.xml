<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item
        android:bottom="40dp"
        android:right="40dp">
        <shape android:shape="rectangle">
            <size
                android:width="60dp"
                android:height="60dp" />
            <solid android:color="@color/red" />

        </shape>
    </item>
    <item
        android:left="40dp"
        android:top="40dp">
        <shape android:shape="rectangle">
            <size
                android:width="60dp"
                android:height="60dp" />
            <solid android:color="@color/green" />

        </shape>
    </item>
</layer-list>